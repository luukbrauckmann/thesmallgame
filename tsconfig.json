{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"baseUrl": ".",
		"paths": {
		  "@data": [".data"],
			"@data/*": [".data/*"],
			"@blocks": ["src/blocks"],
			"@layouts": ["src/layouts"],
			"@scripts": ["src/scripts"]
		}
	},
	"include": ["scripts/**/*.ts", ".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
